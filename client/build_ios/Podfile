# Generated by Dirichlet Mediation Unity Plugin
# Post Process 重构版本（2026-02-05）：
# - Framework target 仅放 DirichletMediationSDK（bridge 编译必须）
# - App target 放 Adapters + 三方 SDK（由 App 统一负责嵌入与打包）
#
# Framework target: UnityFramework
# App target: Unity-iPhone

source 'https://cdn.cocoapods.org/'

platform :ios, '11.0'
use_frameworks!

# Framework target: 仅 DirichletMediationSDK（bridge 编译必须）
target 'UnityFramework' do
  pod 'TapTapSDK/Core', '4.9.5'
  pod 'TapTapSDK/Login', '4.9.5'
  pod 'DirichletMediationSDK', '4.2.0.2'
end

# App target: Adapters + 三方 SDK（由 App 统一负责嵌入与打包）
target 'Unity-iPhone' do
  pod 'DirichletMediationAdapterCSJ', '4.2.0.2'
  pod 'DirichletMediationAdapterGDT', '4.2.0.2'
  pod 'DirichletMediationAdapterDRA', '4.2.0.2'
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '11.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
    end
  end
end
